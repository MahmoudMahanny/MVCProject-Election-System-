@model ElectionProgram.Models.Questionaire

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@section header
    {
    <div> </div>
}
<h2>Details</h2>

<div>
    <h4>Questionaire</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
            @{
                int counter = 0;
                var questions = (from quest in Model.Questions
                                 where quest.QuestionaireID == Model.ID
                                 select quest.question).ToList();
                foreach (var item in questions)
                {
                    counter++;
                    <br />
                    if (item != "")
                    {
                    @Html.DisplayName("Question" + @counter);
                        }
                    }
                }
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
            @{
                var questionList = (from quest in Model.Questions
                                    where quest.QuestionaireID == Model.ID
                                    select quest.question).ToList();
                foreach (var item in questionList)
                {
                    if (item != "")
                    {
                        <div>@item</div>
                    }

                }
            }
        </dd>

    </dl>


    

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
