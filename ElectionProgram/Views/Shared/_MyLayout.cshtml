@{
    Layout = null;
}
<link href="~/Content/messagevoted.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Election System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class="navbar navbar-inverse " style="height:100px; background-color:whitesmoke">
        <div class="container ">
            
            <div id="header" >
                <div class="clearfix">
                    <div class="logo"style="float:left">
                        <a href="#"><img src="~/Content/images/logo.png" alt="LOGO" height="100" width="100"></a>
                    </div>
                    <h1 style="padding-top:37px; color:black;float:left;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Election System</h1>
                    @RenderSection("header", true)
                    <div style="clear:both"></div>
                </div>
                <div style="clear:both"></div>
            </div>
            
            
        </div>
    </div>
    <div style="clear:both"></div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Election System</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)


</body>
</html>
