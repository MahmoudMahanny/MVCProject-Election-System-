@model IEnumerable<ElectionProgram.Models.Candidate>

@{
    ViewBag.Title = "ShowWinner";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@section header
     {
<h2>Winner</h2>
    }
<br />
<br />
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfVotes)
        </th>
    </tr>

    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfVotes)
            </td>
        </tr>
    }

</table>