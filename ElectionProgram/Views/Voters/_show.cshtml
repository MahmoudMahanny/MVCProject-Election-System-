@model List<ElectionProgram.Models.Candidate>
@{
    ViewBag.Title = "ShowCandidate";
    Layout =null;
}
<link href="~/Content/ShowcandidateStyle.css" rel="stylesheet" />


<table id="mytable">
    <tr class="Header" id="myHeader">
        <th>Candidate Name</th>
        <th>Number of Votes</th>
        <th>Candidate Image</th>
    </tr>

    @{
        foreach (var item in Model)
        {
            <tr>

                <td>@item.Name </td>
                <td>@item.NoOfVotes </td>
                <td><img src="@item.ImagePath" width="50px" height="50px" class="img-circle" /> </td>
                

            </tr>

        }
    }



</table>













